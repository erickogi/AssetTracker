<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="match_parent"

                        android:text="Start Date"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"

                        android:id="@+id/edt_start"
                        android:text="Start date"

                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"

                        android:text="Close Date"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"

                        android:id="@+id/edt_end"
                        android:text="Start date"

                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="4dp"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


               <TextView
                   android:layout_marginTop="4dp"
                   android:text="Failure description"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="Failure description"

                android:textStyle="bold"
                android:id="@+id/edt_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="4dp"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:text="Solution description"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="Failure description"

                android:textStyle="bold"
                android:id="@+id/edt_soln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="4dp"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:text="Engineers Comment"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="engineers comment"

                android:textStyle="bold"
                android:id="@+id/edt_engineer_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <View
                android:layout_marginTop="4dp"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:text="Customers Comment"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="customers comment"

                android:textStyle="bold"
                android:id="@+id/edt_customer_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="4dp"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:text="Safety"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="safety comment"

                android:textStyle="bold"
                android:id="@+id/edt_safety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />








            <View
                android:layout_marginTop="4dp"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="4dp"
                        android:text="Travel Hours"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="4dp"
                        android:text="travel hours"

                        android:textStyle="bold"
                        android:id="@+id/edt_travel_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="4dp"
                        android:text="Labour Hours"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="4dp"
                        android:text="labour hours"

                        android:textStyle="bold"
                        android:id="@+id/edt_labour_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>






            </LinearLayout>
            <View
                android:layout_marginTop="4dp"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:text="Next Service Date"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="Select Next service"

                android:textStyle="bold"
                android:id="@+id/edt_next_service_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:visibility="gone"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Parts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView

                android:visibility="gone"
                android:id="@+id/recyclerView"


                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_below="@+id/search"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:nestedScrollingEnabled="true"
                android:scrollIndicators="start|end"
                android:scrollbarSize="6dp"
                android:scrollbars="vertical"

                >


            </android.support.v7.widget.RecyclerView>


            <Button
                android:textColor="@color/white"
                android:id="@+id/btn_edit"
                android:background="@color/colorPrimary"
                android:text="Edit issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>

    </ScrollView>
</RelativeLayout>